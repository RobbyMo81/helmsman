# Backend Environment Configuration for Helios
# Copy this file to .env in the backend directory for local development

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=server.py

# API Configuration (should match frontend config)
API_PORT=5001
API_HOST=localhost
API_PROTOCOL=http

# Development Settings
DEBUG=True
TESTING=False

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost

# Logging
LOG_LEVEL=INFO

# Database (if you add one later)
# DATABASE_URL=sqlite:///helios.db

# Security (for production)
# SECRET_KEY=your-secret-key-here
# JWT_SECRET_KEY=your-jwt-secret-here
