# Auto-detect text files and normalize line endings
* text=auto

# Force LF for source files in the repo
*.py text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh text eol=lf

# Keep PowerShell scripts CRLF on Windows
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary

# Ensure the .gitattributes file itself uses LF in the repository
.gitattributes text eol=lf
